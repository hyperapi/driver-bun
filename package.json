{
	"name": "@hyperapi/driver-bun",
	"version": "0.2.0-beta.2",
	"description": "HyperAPI HTTP driver for Bun.",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "src/main.js",
	"types": "types/main.d.js",
	"exports": {
		".": {
			"import": "./src/main.js",
			"require": "./dist/main.cjs"
		}
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@hyperapi/core": "0.2.0-beta.2",
		"@kirick/ip": "0.1.1-beta.5",
		"cbor-x": "1.5.4"
	},
	"devDependencies": {
		"@babel/eslint-parser": "7.21.8",
		"@types/bun": "^1.1.5",
		"eslint": "8.41.0",
		"eslint-config-xo": "0.43.1",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-jsdoc": "46.5.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-unicorn": "47.0.0",
		"vitest": "^1.6"
	},
	"scripts": {
		"test": "bun test && npm run test:vitest",
		"test:vitest": "vitest run --no-file-parallelism",
		"build": "bun run build:types && bun run build:cjs",
		"build:cjs": "bunx esbuild --bundle --platform=node --format=cjs --packages=external --outfile=dist/main.cjs src/main.js",
		"build:types": "bunx tsc --skipLibCheck --declaration --emitDeclarationOnly --outDir types",
		"publish:npm": "pnpm i && bun run build && eslint . && bunx tsc --skipLibCheck --noemit && bun run test && npm publish",
		"publish:npm:beta": "bun run publish:npm --tag beta"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hyperapi/core.git"
	},
	"keywords": [
		"hyperapi",
		"api",
		"driver",
		"hyperapi-driver",
		"bun"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/hyperapi/core/issues"
	},
	"homepage": "https://github.com/hyperapi/core#readme"
}
